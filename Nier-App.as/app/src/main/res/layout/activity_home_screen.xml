<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/home_screen"
    tools:context="com.example.roberthubbell.nier_app.HomeScreenActivity">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/Black"
        android:textSize="80sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    app:layout_constraintHorizontal_bias="0.5"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/add_button"
        android:layout_width="178dp"
        android:layout_height="150dp"
        android:layout_alignRight="@+id/fuse_button"
        android:layout_marginBottom="37dp"
        android:layout_marginRight="10dp"
        android:text="@string/add_button"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/fuse_button"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="10dp"
        android:text="@string/fuse_button"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:typeface="serif" />
</LinearLayout>

    <Button
        android:id="@+id/info_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/roundedbutton"
        android:text="i"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:typeface="serif"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/test_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Test Page" />


</RelativeLayout>
