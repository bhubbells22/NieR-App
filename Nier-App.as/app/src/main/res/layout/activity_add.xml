<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_screen"
    android:background="@drawable/background"
    tools:context="com.example.roberthubbell.nier_app.AddActivity">

    <Button
        android:id="@+id/chip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Select Chip"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="148dp" />

    <Button
        android:id="@+id/phantom_chip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Chip"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="148dp"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_toStartOf="@+id/phantom_chip_button"
        android:text="Add"
        android:visibility="invisible" />â€¨

    <Button
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_button"
        android:layout_alignBottom="@+id/add_button"
        android:layout_toEndOf="@+id/phantom_chip_button"
        android:text="Remove"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/level_text"
        android:text="level"
        android:textSize="40dp"
        android:textColor="@color/Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/phantom_chip_button"
        android:layout_toEndOf="@+id/level5" />

    <Button
        android:id="@+id/level0"
        android:text="0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level_text"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/level1"
        android:text="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level_text"
        android:layout_toEndOf="@+id/level0" />

    <Button
        android:id="@+id/level2"
        android:text="2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level_text"
        android:layout_toEndOf="@+id/level1" />

    <Button
        android:id="@+id/level3"
        android:text="3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level_text"
        android:layout_toEndOf="@+id/level2" />

    <Button
        android:id="@+id/level4"
        android:text="4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level_text"
        android:layout_toEndOf="@+id/level3" />

    <Button
        android:id="@+id/level5"
        android:text="5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level0"
        android:layout_toStartOf="@+id/add_button" />

    <Button
        android:id="@+id/level6"
        android:text="6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level1"
        android:layout_toEndOf="@+id/level5" />

    <Button
        android:id="@+id/level7"
        android:text="7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level2"
        android:layout_toEndOf="@+id/level6" />

    <Button
        android:id="@+id/level8"
        android:text="8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/level3"
        android:layout_toEndOf="@+id/level7" />

    <TextView
        android:id="@+id/size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/level_text"
        android:layout_below="@+id/level6"
        android:text="size"
        android:textColor="@color/Black"
        android:textSize="40dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/size0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/level1"
        android:layout_below="@+id/size_text"
        android:visibility="invisible" />

    <Button
        android:id="@+id/size1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/level2"
        android:layout_below="@+id/size_text"
        android:visibility="invisible" />

    <Button
        android:id="@+id/size2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/level3"
        android:layout_below="@+id/size_text"
        android:visibility="invisible" />

    <Button
        android:id="@+id/size3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/level1"
        android:layout_below="@+id/size0"
        android:visibility="invisible" />

    <Button
        android:id="@+id/size4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/level2"
        android:layout_below="@+id/size1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/size5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/level3"
        android:layout_below="@+id/size2"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/chip_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/phantom_chip_button"
        android:layout_alignTop="@+id/level_text"
        android:layout_above="@+id/remove_button" />

</RelativeLayout>