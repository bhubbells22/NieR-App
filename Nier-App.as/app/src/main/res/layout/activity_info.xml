<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.roberthubbell.nier_app.InfoActivity">


    <Button
        android:id="@+id/ghost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Select Chip"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="148dp" />

    <Button
        android:id="@+id/chip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Select Chip"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="148dp" />

    <TextView
        android:textColor="@color/Black"
        android:id="@+id/ChipDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ghost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Chip Description" />

    <TextView
        android:textColor="@color/Black"
        android:id="@+id/MaxEffectView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Max Effect"
        android:layout_below="@+id/ChipDescriptionView"
        android:layout_toStartOf="@+id/ghost" />

    <TextView
        android:textColor="@color/Black"
        android:id="@+id/OptimalSetupView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optimal Setup"
        android:layout_alignBaseline="@+id/MaxEffectView"
        android:layout_alignBottom="@+id/MaxEffectView"
        android:layout_toEndOf="@+id/ghost" />


    <ImageView
        android:id="@+id/EnemyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_marginEnd="26dp"
        android:layout_alignTop="@+id/LocationImageView"
        android:layout_alignEnd="@+id/OptimalSetupView" />

    <ImageView
        android:id="@+id/LocationImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_below="@+id/EnemyNameView"
        android:layout_alignStart="@+id/EffectView"
        android:layout_marginTop="86dp" />

    <TextView
        android:id="@+id/EffectView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/MaxEffectView"
        android:layout_below="@+id/MaxEffectView"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="11dp"
        android:text="100%"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/OptimalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level#(Quantity)"
        android:textColor="@color/Black"
        android:layout_alignBaseline="@+id/EffectView"
        android:layout_alignBottom="@+id/EffectView"
        android:layout_alignStart="@+id/OptimalSetupView" />

    <TextView
        android:id="@+id/EnemyNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy Name"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/EffectView"
        android:layout_toStartOf="@+id/ghost" />

    <TextView
        android:id="@+id/LocationNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EnemyNameView"
        android:layout_alignBottom="@+id/EnemyNameView"
        android:layout_alignStart="@+id/OptimalView"
        android:text="Location View"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
