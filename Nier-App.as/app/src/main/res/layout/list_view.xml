<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.roberthubbell.nier_app.TestActivity"
    android:id="@+id/test_screen">


    <TextView
        android:id="@+id/chipName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="164dp"
        android:text="name" />

    <TextView
        android:id="@+id/chipCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chipName"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/chipName"
        android:text="count" />

    <TextView
        android:id="@+id/inDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/chipCount"
        android:layout_below="@+id/chipName"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="54dp"
        android:text="inDB?" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Add" />

    <Button
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add"
        android:layout_alignParentEnd="true"
        android:text="Remove" />

    <Button
        android:id="@+id/chip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Button" />

</RelativeLayout>