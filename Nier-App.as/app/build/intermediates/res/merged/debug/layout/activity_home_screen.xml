<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.roberthubbell.nier_app.HomeScreenActivity">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/Black"
        android:textSize="110sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/roundedbutton"
        android:scaleType="fitCenter"
        android:src="@drawable/info_icon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Test Page"
        android:textColor="@android:color/transparent"
        android:background="@android:color/transparent"/>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_text"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/Black"
            android:textSize="60sp"
            android:typeface="normal"
            android:layout_marginStart="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/add_button" />

        <TextView
            android:id="@+id/fuse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuse"
            android:textColor="@color/Black"
            android:textSize="60sp"
            android:typeface="normal"
            android:layout_above="@+id/fuse_button"
            android:layout_alignEnd="@+id/fuse_button"
            android:layout_marginEnd="18dp" />

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/plus_sign"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/fuse_button"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fuse_icon"
            android:layout_alignTop="@+id/add_button"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>
