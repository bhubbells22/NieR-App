<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:id="@+id/home_screen"
    tools:context="com.example.roberthubbell.nier_app.HomeScreenActivity">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="60sp"
        android:typeface="serif"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.453"
        android:layout_above="@+id/add_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/add_button"
        android:textSize="30sp"
        android:typeface="serif"
        android:textAllCaps="false"
        android:layout_above="@+id/fuse_button"
        android:layout_alignStart="@+id/fuse_button"
        android:layout_marginBottom="37dp" />

    <Button
        android:id="@+id/fuse_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/fuse_button"
        android:textSize="30sp"
        android:typeface="serif"
        android:textAllCaps="false"

        android:layout_above="@+id/info_button"
        android:layout_alignStart="@+id/info_button"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/info_button"
        android:textSize="30sp"
        android:typeface="serif"
        android:textAllCaps="false"

        android:layout_marginBottom="117dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
