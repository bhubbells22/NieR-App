<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:id="@+id/home_screen"
    tools:context="com.example.roberthubbell.nier_app.HomeScreenActivity">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/White"
        android:textSize="60sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/test_button" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/info_button"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="21dp"
    android:layout_alignParentEnd="true">

    <Button
        android:id="@+id/add_button"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_above="@+id/fuse_button"
        android:layout_alignright="@+id/fuse_button"
        android:layout_marginBottom="37dp"
        android:text="@string/add_button"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:typeface="serif"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/fuse_button"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_above="@+id/info_button"
        android:layout_marginBottom="32dp"
        android:text="@string/fuse_button"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:typeface="serif"
        android:layout_marginLeft="10dp" />
</LinearLayout>

    <Button
        android:id="@+id/info_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="61dp"
        android:background="@drawable/roundedbutton"
        android:text="i"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:typeface="serif"
        android:layout_above="@+id/test_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Test Page" />


</RelativeLayout>
