<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.roberthubbell.nier_app.HomeScreenActivity">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="@string/app_name"
        android:textColor="@color/Black"
        android:textSize="80sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_above="@+id/test_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/roundedbutton"
        android:drawableBottom="@drawable/info_icon"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Test Page" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintHorizontal_bias="0.5">

        <Button
            android:id="@+id/add_button"
            android:layout_width="178dp"
            android:layout_height="150dp"
            android:layout_alignRight="@+id/fuse_button"
            android:layout_marginBottom="37dp"
            android:layout_marginRight="10dp"
            android:drawableBottom="@drawable/plus_sign"
            android:text="@string/add_button"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/fuse_button"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="10dp"
            android:drawableBottom="@drawable/fuse_icon"
            android:text="@string/fuse_button"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:typeface="serif" />
    </LinearLayout>


</RelativeLayout>
