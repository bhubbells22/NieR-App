<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.roberthubbell.nier_app.InfoActivity">


    <Button
        android:id="@+id/ghost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Select Chip"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="148dp" />

    <Button
        android:id="@+id/chip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Select Chip"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="148dp" />

    <TextView
        android:id="@+id/medSpacer"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/largeSpacer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medSpacer"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/chip_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chip_button"
        android:layout_marginTop="17dp"
        android:text="Increases movement speed"
        android:layout_alignEnd="@+id/os_title"
        android:layout_alignStart="@+id/me_title" />

    <TextView
        android:id="@+id/me_title"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/largeSpacer"
        android:layout_below="@+id/ghost_spacer"
        android:layout_marginTop="36dp"
        android:text="Max EFfect" />

    <TextView
        android:id="@+id/os_title"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optimal Setup"
        android:layout_alignBaseline="@+id/me_title"
        android:layout_alignBottom="@+id/me_title"
        android:layout_alignEnd="@+id/largeSpacer" />

    <TextView
        android:id="@+id/e_title"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/me_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="Enemy" />

    <TextView
        android:id="@+id/l_title"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="Location" />

    <TextView
        android:id="@+id/max_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="100%"
        android:layout_below="@+id/me_title"
        android:layout_toStartOf="@+id/medSpacer" />

    <TextView
        android:id="@+id/optimal_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/max_effect"
        android:layout_alignBottom="@+id/max_effect"
        android:layout_toEndOf="@+id/ghost"
        android:text="(8)x1" />

    <TextView
        android:id="@+id/enemy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Small Biped" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="City Ruins (Cave)"
        android:layout_below="@+id/l_title"
        android:layout_toEndOf="@+id/me_title" />

    <TextView
        android:id="@+id/ghost_spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/l_title"
        android:layout_alignTop="@+id/chip_description"
        android:text="TextView"
        android:visibility="invisible" />


</RelativeLayout>
